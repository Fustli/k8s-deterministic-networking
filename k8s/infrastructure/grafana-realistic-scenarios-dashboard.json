{
  "dashboard": {
    "id": null,
    "title": "Realistic Traffic Scenarios - ML Controller Analysis",
    "tags": ["ml-controller", "traffic-analysis", "production-scenarios"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Network Jitter - Real vs Target",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.75, rate(hubble_http_request_duration_seconds_bucket[5m])) * 1000 - histogram_quantile(0.25, rate(hubble_http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "Current Jitter (IQR)"
          },
          {
            "expr": "vector(2.0)",
            "legendFormat": "Target Jitter Threshold"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "min": 0
          }
        },
        "options": {
          "legend": {
            "displayMode": "visible"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Bandwidth Control Actions",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(ml_controller_bandwidth_changes_total[5m]) * 60",
            "legendFormat": "Bandwidth Changes/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Traffic Load by Scenario",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(hubble_http_requests_total[1m]) * 60",
            "legendFormat": "Requests/min"
          },
          {
            "expr": "rate(hubble_http_request_bytes_total[1m]) / 1024 / 1024",
            "legendFormat": "Traffic MB/s"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Response Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(hubble_http_request_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "options": {
          "calculate": true,
          "calculation": {
            "xBuckets": {
              "mode": "size",
              "value": "20ms"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "ML Controller Effectiveness",
        "type": "stat",
        "targets": [
          {
            "expr": "avg_over_time(histogram_quantile(0.95, rate(hubble_http_request_duration_seconds_bucket[5m]))[30m:]) * 1000",
            "legendFormat": "Avg P95 Latency"
          },
          {
            "expr": "stddev_over_time(histogram_quantile(0.95, rate(hubble_http_request_duration_seconds_bucket[5m]))[30m:]) * 1000",
            "legendFormat": "Latency Std Dev"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Current Bandwidth Allocation",
        "type": "gauge",
        "targets": [
          {
            "expr": "ml_controller_current_bandwidth_mbps",
            "legendFormat": "Current Bandwidth"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mbps",
            "min": 0,
            "max": 1000,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 500}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 16}
      },
      {
        "id": 7,
        "title": "Scenario Performance Metrics",
        "type": "table",
        "targets": [
          {
            "expr": "rate(hubble_http_requests_total[5m]) * 60",
            "legendFormat": "Request Rate",
            "format": "table"
          },
          {
            "expr": "histogram_quantile(0.5, rate(hubble_http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P50 Latency",
            "format": "table"
          },
          {
            "expr": "histogram_quantile(0.95, rate(hubble_http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95 Latency",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 16}
      },
      {
        "id": 8,
        "title": "Error Rate by Scenario",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(hubble_http_requests_total{response_code!~\"2..\"}[5m]) / rate(hubble_http_requests_total[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s",
    "annotations": {
      "list": [
        {
          "name": "ML Controller Actions",
          "datasource": "Prometheus",
          "expr": "changes(ml_controller_bandwidth_mbps[1m]) != 0",
          "titleFormat": "Bandwidth Change",
          "textFormat": "{{value}} Mbps"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "scenario",
          "type": "query",
          "query": "label_values(hubble_http_requests_total, scenario)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    }
  }
}