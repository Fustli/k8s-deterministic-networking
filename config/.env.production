# Production Environment Configuration Template
# Copy this file to .env and modify values as needed

# Prometheus/Monitoring Configuration
PROMETHEUS_URL=http://prometheus-server.monitoring.svc.cluster.local:9090
TARGET_APPLICATION=robot-factory

# Control Thresholds - Fine-tuned for production workload
TARGET_JITTER_MS=1.5
TARGET_LATENCY_MS=8.0

# Bandwidth Limits - Adjusted for production capacity
MIN_BANDWIDTH_MBPS=20
MAX_BANDWIDTH_MBPS=800
AGGRESSIVE_DECREASE_MBPS=80
GENTLE_DECREASE_MBPS=15
INCREASE_STEP_MBPS=10
UPDATE_THRESHOLD_MBPS=3

# Control Loop Timing - More responsive for production
CONTROL_INTERVAL_SEC=3

# EWMA Smoothing - More aggressive smoothing for production stability
EWMA_ALPHA=0.8

# Hysteresis - Longer cooldown for production stability
COOLDOWN_PERIOD_SEC=45
CRITICAL_JITTER_MULTIPLIER=2.5

# Kubernetes Production Configuration
DEPLOYMENT_NAME=production-app-deployment
NAMESPACE=production
BANDWIDTH_ANNOTATION=kubernetes.io/egress-bandwidth

# Production Logging
LOG_LEVEL=WARNING